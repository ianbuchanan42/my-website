<section class="mb-16">
  <h2 class="text-3xl font-bold mb-8">Contact Me</h2>
  
  <div class="max-w-2xl mx-auto">
    <%= turbo_frame_tag "contact_form" do %>
      <%= form_with(url: contact_path, method: :post, class: "space-y-6", 
          data: { controller: "contact-form" }) do |f| %>
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", required: true %>
        </div>
        
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", required: true %>
        </div>
        
        <div>
          <%= f.label :subject, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :subject, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", required: true %>
        </div>
        
        <div>
          <%= f.label :message, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :message, rows: 5, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500", required: true %>
        </div>
        
        <%= f.submit "Send Message", 
            class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500",
            data: { contact_form_target: "submit" } %>
      <% end %>
    <% end %>
  </div>
</section> 